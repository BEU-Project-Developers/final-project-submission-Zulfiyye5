<Page x:Class="MyProject.Views.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProject"
      mc:Ignorable="d" 
     VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#1B2027"
    
      Title="SignUpPage">


    <Grid >
        <StackPanel HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center">
            <TextBlock Text="MOVIEDB" FontSize="60" FontWeight="Bold" Foreground="White" Margin="0,0,0,5" />

            <TextBlock Text="Sign Up" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" Foreground="White"/>

            <TextBlock Text="EMAIL" Margin="0,0,0,5" FontSize="12" FontWeight="Bold" Foreground="White"/>
            <TextBox Height="35" Margin="0,0,0,15" Background="#EFEFEF" BorderThickness="0" Padding="10" x:Name="EmailTextbox" />

            <TextBlock Text="USERNAME" Margin="0,0,0,5" FontSize="12" FontWeight="Bold" Foreground="White" />
            <TextBox Height="35" Margin="0,0,0,15" Background="#EFEFEF" BorderThickness="0" Padding="10" x:Name="UserNameTextbox" />

            <TextBlock Text="PASSWORD" Margin="0,0,0,5" FontSize="12" FontWeight="Bold" Foreground="White"  />
            <PasswordBox Height="35" Margin="0,0,0,15" Background="#EFEFEF" BorderThickness="0" Padding="10" x:Name="PasswordBox" />



            <Button Content="Sign up"
                    Background="#5138EE"
                    Foreground="White"
                    Margin="0,0,0,15"
                    Width="100"
                    Height="34"
                    FontSize="12"
                    Click="SignUpClick"
                    HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Button.Resources>
            </Button>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Already have an account?" Foreground="White"  Margin="0,20,0,0" />
                <Button Content="Sign in" Background="Transparent" Foreground="White"  Click="SignInClick" VerticalAlignment="Bottom" BorderBrush="Transparent" Margin="100,0,0,0"></Button>
            </StackPanel>



        </StackPanel>






    </Grid>
</Page>
