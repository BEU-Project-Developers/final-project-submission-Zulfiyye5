<Page x:Class="MyProject.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProject"
      mc:Ignorable="d" 

      Title="SignInPage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#1B2027">

    <Grid >
        <StackPanel HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center">
            <TextBlock Text="MOVIEDB" FontSize="60" FontWeight="Bold" Foreground="White" Margin="0,0,0,5" />
            <TextBlock Text="Sign in" FontSize="40" FontWeight="Bold" Foreground="White" Margin="0,0,0,5" TextAlignment="Center" />
            <TextBlock Text="EMAIL" Margin="0,40,0,5" FontSize="12" FontWeight="Bold"  Foreground="White"  />
            <TextBox Height="35" Margin="0,0,0,15" Background="#EFEFEF" BorderThickness="0" Padding="10" x:Name="EmailTextbox" />

            <TextBlock Text="PASSWORD"   Foreground="White"  Margin="0,0,0,5" FontSize="12" FontWeight="Bold" />
            <PasswordBox Height="35" Margin="0,0,0,15" Background="#EFEFEF" BorderThickness="0" Padding="10" x:Name="PasswordBox" />
            <Button Content="Sign in"
        
 Background="#5138EE"
        Foreground="White"
Margin="0,10,0,15"
Width="100"
 Height="34"
 FontSize="12"
  Click="SignInClick"
 HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>

                    </Style>
                </Button.Resources>
            </Button>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Don't have an account?" Foreground="White"  Margin="0,20,0,0" />
                <Button Content="Create account" Background="Transparent" Foreground="White"  Click="SignUpCLick" VerticalAlignment="Bottom" BorderBrush="Transparent" Margin="70,0,0,0"></Button>
            </StackPanel>



        </StackPanel>


   
        

       
    </Grid>
</Page>
