<Page x:Class="MyProject.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProject.Views"
      mc:Ignorable="d" 
              xmlns:u="clr-namespace:MyProject"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#1B2027"
      Title="HomePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <Border Grid.Row="0" Background="#14181C">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <u:NavBar x:Name="NavBarUserControl" Grid.Row="0"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Welcome to MOVIEDB" Foreground="White" Margin="20,10,0,0" FontSize="30"/>
                    <TextBlock Text="Explore now" Foreground="White" Margin="22,0,0,20" FontSize="10"/>
                    
                    <StackPanel Orientation="Vertical" Margin="22,0,22,0">
                        <TextBlock Text="Highest IMDB" Foreground="White" FontSize="20"  Margin="0,10,0,10"/>
                                          <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                      <ItemsControl ItemsSource="{Binding HighestImdbMovies}">
                          <ItemsControl.ItemsPanel>
                              <ItemsPanelTemplate>
                                  <WrapPanel Orientation="Horizontal" />
                              </ItemsPanelTemplate>
                          </ItemsControl.ItemsPanel>
                          <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                  <Border Background="#444" Width="150" Height="230"  Margin="0,0,10,10" CornerRadius="5" MouseLeftButtonDown="MovieItem_Click">
                                      <StackPanel>
                                          <Image Source="{Binding Image_path}" Height="190" Stretch="UniformToFill"/>
                                          <TextBlock Text="{Binding Title}" 
Foreground="White" 
TextAlignment="Center" 
Margin="5,5,5,0" 
TextWrapping="Wrap"/>
                                      </StackPanel>
                                  </Border>
                              </DataTemplate>
                          </ItemsControl.ItemTemplate>
                      </ItemsControl>
                  </ScrollViewer>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="22,0,22,0">
                        <TextBlock Text="What's Popular" Foreground="White" FontSize="20"  Margin="0,20,0,10"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                            <ItemsControl ItemsSource="{Binding PopularMovies}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#444" Width="150" Height="230"  Margin="0,0,10,10" CornerRadius="5" MouseLeftButtonDown="MovieItem_Click">
                                            <StackPanel>
                                                <Image Source="{Binding Image_path}" Height="190" Stretch="UniformToFill"/>
                                                <TextBlock Text="{Binding Title}" 
Foreground="White" 
TextAlignment="Center" 
Margin="5,5,5,0" 
TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
